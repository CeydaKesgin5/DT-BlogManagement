@using Entities.Models;
@model IEnumerable<Blog>
<style>
    tr {
        height: 90px; /* Tüm satırlar için yükseklik ayarlama */
    }
</style>

<div class="text-center">
    <div class="display-6">Blogs</div>

    <div class="d-flex justify-content-end my-3">
        @if (User.Identity.IsAuthenticated) // Kullanıcı giriş yaptı mı?
        {
            <a class="btn btn-outline-success" asp-action="Create">
                <i class="fa fa-plus"></i>
                Create
            </a>
        }
        else
        {
            <a class="btn btn-outline-info" asp-controller="Account" asp-action="Login">
                <i class="fa fa-sign-in"></i>
                Login to Create
            </a>
        }
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Title</th>
                <th>Published At</th>
                <th>Operations</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Blog blog in Model)
            {
                <tr>
                    <td>@blog.Id</td>

                    <td>
                        <img class="border border-light rounded" src="@blog?.Image" 
                        width="80" />
                    </td>
                    <td class="text-left" style="font-size: 20px;">@blog.Title
                        <br />@blog.Author
                    </td>
               
                    <td>@blog.PublishedAt.ToString("d")</td>
                    <td>
                        <div class="btn-group">
                            @if (User.Identity.IsAuthenticated) // Kullanıcı giriş yaptı mı?
                            {
                                <a class="btn btn-warning" asp-action="Update" asp-route-id="@blog.Id">
                                    <i class="fa fa-edit"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@blog.Id">
                                    <i class="fa fa-trash"></i>
                                    Delete
                                </a>
                            }
                            <a class="btn btn-info" target="_blank" asp-area="" asp-controller="Blog" asp-action="Get" asp-route-id="@blog.Id">
                                <i class="fa fa-search"></i>
                                View
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
