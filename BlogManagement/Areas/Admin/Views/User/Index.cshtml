@using Microsoft.AspNetCore.Identity
@using Entities.Models 
@model IEnumerable<IdentityUser>



<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>UserId</th>
            <th>Username</th>
            <th>Email</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IdentityUser user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <div class="btn-group">

                        <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                           asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">
                            <i class="fa fa-trash"></i> Delete
                        </a>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>
