@using Entities.Models
@model IEnumerable<Category>



<div class="row">

    <div class="col-md-12">
     

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>CategoryName</th>
                    <th>Blogs Count</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Category cat in Model)
                {

                        <tr>
                            <td>@cat.CategoryID</td>
                          
                             <td>@cat.CategoryName</td>
                             <td>@cat.Blogs.Count()</td>
                            
                            <td>
                                 <div class="btn-group"> 
                                     
                                     <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                             asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@cat.CategoryID">
                                        <i class="fa fa-trash"></i> Delete 
                                     </a> 
                                </div>
                            </td>
                        </tr>
                }
                <form method="post" asp-action="Index">
                    <input type="hidden" name="showForm"  />
                    <button type="submit" class="btn btn-primary mb-3">Add Category</button>
                </form>

                @if (ViewBag.ShowForm == true)
                {
                    <div class="mt-3">
                        <form method="post" asp-action="Create">
                            <div class="form-group">
                                <input type="text" name="CategoryName" class="form-control" placeholder="Add Category" required />
                            </div>
                            <button type="submit" class="btn btn-success mt-2">Save</button>
                        </form>
                    </div>
                }

            </tbody>
        </table>


    </div>
</div>


