@using Entities.Models
@model IEnumerable<Blog>

<div class="row">
    <div class="col-md-3">
        <div class="card bg-primary text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Categories</h5>
                <h3 class="text-center display-3">
                    @ViewBag.CategoryCount
                </h3>

            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-danger text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Blogs</h5>
                <h3 class="text-center display-3">
                    @ViewBag.BlogCount
                </h3>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-info text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Users</h5>
                <h3 class="text-center display-3">
                    @ViewBag.UserCount
                </h3>
            
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card bg-warning text-white" style="width: 18rem;">
            <div class="card-body text-center">
                <h6 class="card-subtitle mb-2">Number of</h6>
                <h5 class="card-title">Comments</h5>
                <h3 class="text-center display-3">
                    @ViewBag.CommentCount
                </h3>
            </div>
        </div>
    </div>
</div>
<br /><br /><br />

<div class="row">
   
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Published At</th>
                    <th>UserId</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Blog blog in Model)
                {

                    <tr>
                        <td>@blog.Id</td>
                        <td>
                            <img class="border border-light rounded" src="@blog?.Image"
                                 width="50" />
                        </td>
                        <td>@blog.Title</td>
                        <td>
                            @blog.Author
                        </td>
                        
                        <td>@blog.PublishedAt.ToString("d")</td>
                        <td>
                            @blog.UserId
                        </td>

                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                   asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@blog.Id">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                   asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="View" class="btn btn-info"
                                   asp-area="Admin" asp-controller="Blog" asp-action="Get" asp-route-id="@blog.Id">
                                    <i class="fa fa-search"></i> View
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    
    </div>
</div>


