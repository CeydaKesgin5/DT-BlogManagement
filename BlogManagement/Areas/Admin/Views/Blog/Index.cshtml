@using Entities.Models
@model IEnumerable<Blog>



<div class="row">
   
    <div class="col-md-12">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Published At</th>
                    <th>UserId</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Blog blog in Model)
                {

                    <tr>
                        <td>@blog.Id</td>
                        <td>
                            <img class="border border-light rounded" src="@blog?.Image"
                                 width="50" />
                        </td>
                        <td>@blog.Title</td>
                        <td>
                            @blog.Author
                        </td>
                        
                        <td>@blog.PublishedAt.ToString("d")</td>
                        <td>
                            @blog.UserId
                        </td>

                        <td>
                            <div class="btn-group">
                                <a data-toggle="tooltip" data-placement="top" title="Edit" class="btn btn-warning"
                                   asp-area="Admin" asp-controller="Blog" asp-action="Update" asp-route-id="@blog.Id">
                                    <i class="fa fa-edit"></i> Edit
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="Delete" class="btn btn-danger"
                                   asp-area="Admin" asp-controller="Blog" asp-action="Delete" asp-route-id="@blog.Id">
                                    <i class="fa fa-trash"></i> Delete
                                </a>
                                <a data-toggle="tooltip" data-placement="top" title="View" class="btn btn-info"
                                   asp-area="" asp-controller="Blog" asp-action="Get" asp-route-id="@blog.Id">
                                    <i class="fa fa-search"></i> View
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    
    </div>
</div>


